<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="rightChildDatas"
            type="com.gthink.wanandroid.data.bean.NavigationArticleBean.ArticlesBean"/>

    </data>

    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginTop="@dimen/dp_4"
            android:layout_marginLeft="@dimen/dp_3"
            android:layout_marginRight="@dimen/dp_3"
            android:paddingLeft="@dimen/dp_6"
            android:paddingRight="@dimen/dp_6"
            android:paddingTop="@dimen/dp_2"
            android:paddingBottom="@dimen/dp_2"
            android:gravity="center"
            randomColor="@{true}"
            android:background="@drawable/shape_bg_navigation_right_tv"
            android:id="@+id/item_navigation_right_child_title"
            android:textSize="@dimen/sp_13"
            android:text="@{rightChildDatas.title}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</layout>
